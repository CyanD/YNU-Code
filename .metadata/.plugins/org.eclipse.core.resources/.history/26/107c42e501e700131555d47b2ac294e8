/**
 * 裁判，用来判断大小，期望，概率，等
 */

/**
 * @author HYC
 *
 */
public class Judge {
	private Deck[] decks;

	public Judge(Deck[] deck) {
		super();
		this.decks = deck;
	}

	public Judge() {
		super();
		this.decks=null;
	}

	public Deck[] getDeck() {
		return decks;
	}

	public void setDeck(Deck[] deck) {
		this.decks = deck;
	}
	public Card average(){//扑克牌大小的期望
		
	}
	
	public void selectionSort(){//从小到达的顺序排序，初步考虑使用最简单的选择排序
		
	}
	
	private Deck getMinDeck(){
		int len=this.decks.length;
		Deck result=this.decks[0];
		for(int i=0;i<len;i++){
			if (result.compareSubDeckTo(this.decks[i])==1){
				result=this.decks[i];
			}
			
		}
		return result;
	}
	
}
