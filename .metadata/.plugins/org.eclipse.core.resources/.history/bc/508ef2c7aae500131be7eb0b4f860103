public class Card {

	int suit, rank;
	String[] suits = { "Clubs", "Diamonds", "Hearts", "Spades" };
	String[] ranks = { "empty", "Ace", "2", "3", "4", "5", "6", "7", "8", "9",
			"10", "Jack", "Queen", "King" };

	//对应中文
	String[] 花色 = { "梅花", "方块", "红桃", "黑桃" };
	String[] 点数 = { "空", "Ace", "2", "3", "4", "5", "6", "7", "8", "9",
			"10", "Jack", "Queen", "King" };
	/**
	 * 空构造方法
	 */
	public Card() {
		this.suit = 0;
		this.rank = 0;
	}

	/**
	 * @param suit
	 * @param rank
	 */
	public Card(int suit, int rank) {
		this.suit = suit;
		this.rank = rank;
	}

	public void print() {
		System.out.println(ranks[rank] + " of " + suits[suit]);
	}

	public int compareTo(Card c) {
		if (this.rank == 1 || c.rank == 1) {// 有Ace的情况
			if (this.rank == 1 && c.rank == 1)
				return 0;
			if (this.rank == 1)
				return 1;
			return -1;
		} else {// 两张牌中都不含有Ace
			if (this.rank > c.rank)
				return 1;
			if (this.rank < c.rank)
				return -1;
			return 0;
		}
	}
}
